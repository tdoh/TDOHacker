.button
  position relative
  display inline-flex
  color $black
  text-shadow none

  &:before
    content ''
    position absolute
    width 100%
    height 100%
    top 60%
    background-color rgba($lightGreen, .5)
    border-radius 2rem
    transform scale(0.9, 0.5)
    filter blur(20px)
    transition background ease-in-out .3s

  &:hover
    &:before
      background-color rgba($lightGreen, .7)

  a
    color inherit
    background-color $lightGreen
    padding 12px 45px
    border-radius 2rem
    text-decoration none
    font-weight 500

    &:hover
      text-decoration none !important
